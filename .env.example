OPENAI_API_KEY=your_openai_api_key_here

# LLM 설정
LLM_TYPE=openai  # openai 또는 ollama
LLM_MODEL=gpt-3.5-turbo  # OpenAI: gpt-3.5-turbo, gpt-4 | Ollama: llama3.2, qwen2.5 등

# 임베딩 설정  
EMBEDDING_TYPE=openai  # openai 또는 sentence-transformer
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI: text-embedding-3-small | ST: paraphrase-multilingual-MiniLM-L12-v2

# Ollama 설정
OLLAMA_BASE_URL=http://localhost:11434

# 문서 처리 설정
CHUNK_SIZE=1000
CHUNK_OVERLAP=200